{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": "./src",
    "paths": {
      "@common-atoms/*": ["components/common/atoms/*"],
      "@common-molecules/*": ["components/common/molecules/*"],
      "@common-organisms/*": ["components/common/organisms/*"],
      "@common-templates/*": ["components/common/templates/*"],
      "@common-pages/*": ["components/common/pages/*"],
      "@features-atoms/*": ["components/features/atoms/*"],
      "@features-molecules/*": ["components/features/molecules/*"],
      "@features-organisms/*": ["components/features/organisms/*"],
      "@features-templates/*": ["components/features/templates/*"],
      "@features-pages/*": ["components/features/pages/*"],

      "@store/*": ["store/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"], // Ajoute les types personnalis√©s ici
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
